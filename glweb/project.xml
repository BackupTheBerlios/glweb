    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <aspectSourceDirectory>src/aspect</aspectSourceDirectory>
    
    <!--
     | Source Modifications. Excludes aspectj files if there is no aspectj 
     | compiler exists in classpath.
    -->
    <sourceModifications>
      <sourceModification>
        <className>org.aspectj.tools.ajc.Main</className>
        <excludes>
          <exclude>**/*.aj</exclude>
        </excludes>
      </sourceModification>
    </sourceModifications>

