<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id: LanguageCode.hbm.xml,v 1.1 2003/10/29 08:27:23 paxson Exp $ -->
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd"
    >

<hibernate-mapping>
    <class name="com.siwi.website.ejb.model.LanguageCode" table="LANGUAGE_CODE">

        <jcs-cache usage="read-write"/>
        
        <id name="id" type="long" column="ID">
            <generator class="@DB_LONG_ID_TYPE@"/>
        </id>
        
        <property name="name" column="NAME" type="string" not-null="true"/>

		<one-to-one 
		    name="language" 
			class="com.siwi.website.ejb.model.Language" 
		    />
    </class>        
</hibernate-mapping>
