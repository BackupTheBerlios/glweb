<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id: City.hbm.xml,v 1.3 2003/10/31 06:49:39 paxson Exp $ -->
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd"
    >

<hibernate-mapping>
    <class name="com.siwi.website.ejb.model.City" table="CITY">

        <jcs-cache usage="read-write"/>
        
        <id name="id" type="long" column="ID">
            <generator class="native"/>
        </id>
        
        <property name="name" column="NAME" type="string" not-null="true"/>

        <set name="languages" table="CITIES_LANGUAGES" cascade="none">
            <key column="CITY_ID"/>
            <many-to-many 
                column="LANGUAGE_ID" 
                class="com.siwi.website.ejb.model.Language"
                />
        </set>
    </class>
    
    <query name="City.findAll"><![CDATA[
        from city in class com.siwi.website.ejb.model.Country
    ]]></query>
</hibernate-mapping>
